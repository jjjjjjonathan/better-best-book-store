  <title>Sell a book - Once Upon a Book</title>
  <body>
    <%- include("../partials/_navbar") %>
    <form action="/listings/new" method="POST" class="add-listing-form">
      <h2>Tell us more about your book</h2>
      <div class="new-listing-form">
        <label for="isbn">ISBN</label>
        <input type="text" name="isbn" placeholder="Enter a 13-digit ISBN-13 number">
      </div>
      <div class="new-listing-form">
        <label for="title">Title <i class="fa-solid fa-book"></i></label>
        <input type="text" name="title">
      </div>
      <div class="new-listing-form">
        <label for="description">Description <i class="fa-solid fa-pen"></i></label>
        <input type="text" name="description">
      </div>
      <div class="new-listing-form">
        <label for="price">Price <i class="fa-solid fa-dollar-sign"></i></label>
        <input type="number" name="price">
      </div>
      <div class="new-listing-form">
        <label for="genre">Genre <i class="fa-solid fa-masks-theater"></i></label>
        <input type="text" name="genre">
      </div>
      <div class="new-listing-button">
        <button type="submit" class="btn btn-outline-secondary" >Submit</button>
      </div>
    </form>
    <footer><%- include("../partials/_footer") %></footer>
