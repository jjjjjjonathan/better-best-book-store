<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/footer.css" type="text/css" />
    <link rel="stylesheet" href="/styles/item_preview.css" type="text/css" />
    <link rel="stylesheet" href="/styles/listings.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/index.js"></script>
    <title>Document</title>
  </head>
  <body>
    <% for(const item of items) { %>
    <ul id="container">
      <li id="book-title"><%= item.title %></li>
      <img id="cover-image" src="<%= item.photo_url %>" alt="" />
      <li><%= item.description %></li>
      <br />
      <li>Price: $<%= item.price %></li>
      <br />
      <li>Genre: <%= item.genre %></li>
      <div id="edit-delete">
        <li>
          <a href="" class="listing-button"><button>Edit</button></a>
        </li>
        <li>
          <a href="" class="listing-button"><button>Mark Sold</button></a>
        </li>
        <li>
          <form
            action="delete/<%= item.item_id %>/<%= item.owner_id %>"
            class="listing-button"
            method="POST"
          >
            <button type="submit" id="deleteItem">Delete</button>
          </form>
        </li>
      </div>
    </ul>

    <% } %>
  </body>
</html>
