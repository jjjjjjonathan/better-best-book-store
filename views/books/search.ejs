    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/index.js"></script>

<title>Advanced Search - Once Upon a Book</title>
  </head>
  <body>
    <%- include("../partials/_navbar") %>
    <form action="/books" method="GET" id="advanced-search-form" class="advanced-search-container">
      <div class="advanced-search-form">
        <label for="title">Keywords in title</label>
        <input type="text" name="title">
      </div>
      <div class="advanced-search-form">
        <label for="isbn">ISBN</label>
        <input type="text" maxlength="13" pattern="[0-9]" placeholder="Enter a 13-digit ISBN-13 number" name="isbn" oninvalid="alert('numbers only')" disabled="disabled">
      </div>
      <div class="advanced-search-form">
        <label for="genre">Genre</label>
        <input type="text" name="genre">
      </div>
      <div class="advanced-search-form">
        <label for="min-price">Minimum price</label>
        <input type="text" name="min-price" disabled="disabled">
        <label for="max-price">Maximum price</label>
        <input type="text" name="max-price" disabled="disabled">
      </div>
      <div class="advanced-search-form">
        <label for="location">Location</label>
        <input type="text" name="location" placeholder="Enter a city" disabled="disabled">
      </div>
      <div class="advanced-search-form">
        <button type="submit">Search</button>
      </div>
    </form>
    <footer><%- include("../partials/_footer") %></footer>
  </body>
</html>
