<!DOCTYPE html>
<html lang="en">
  <head>

  </head>
  <body>
    <% if (!messages) { %>
      <p>no messages no one is talking to you</p>

    <% } else { %>
      <section id="inbox">
        <p>------------</p>
        <% for (const thread of messages) { %>
          <a href="/conversations/<%= thread.id %>">
            <div class="thread-body">
              <h4><%= thread.message_count %> messages between <%= thread.name1 %> and <%= thread.name2 %></h4>
            </div>
            <div class="thread-footer">
              <h5>Last message was sent <%= thread.last_message_time %> by <%= thread.last_sender %>.</h5>
            </div>
            <p>------------</p>
          </a>
        <% } %>
      </section>
    <% } %>
    <footer><%- include("../partials/_footer") %></footer>
  </body>
</html>
